<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:text="Recipe"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <HorizontalScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">
                    <ImageButton
                        android:id="@+id/ingredient_vege_add1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        android:clickable="true"
                        android:contentDescription="@string/just_a_button"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/ingredient_1"
                        android:layout_width="118dp"
                        android:layout_height="90dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/ingredient_img_overlay"
                        android:src="@drawable/img_mashroom" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Ingredients"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">
                    <ImageButton
                        android:id="@+id/ingredient_vege_add2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        android:clickable="true"
                        android:contentDescription="@string/just_a_button"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/ingredient_2"
                        android:layout_width="118dp"
                        android:layout_height="90dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/ingredient_img_overlay"
                        android:src="@drawable/burger" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="Steps"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">
                    <ImageButton
                        android:id="@+id/ingredient_vege_add3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        android:clickable="true"
                        android:contentDescription="@string/just_a_button"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/ingredient_3"
                        android:layout_width="118dp"
                        android:layout_height="90dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/ingredient_img_overlay"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:text="Thumbnail"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">
                    <ImageButton
                        android:id="@+id/ingredient_vege_add4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        android:clickable="true"
                        android:contentDescription="@string/just_a_button"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/ingredient_4"
                        android:layout_width="118dp"
                        android:layout_height="90dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/ingredient_img_overlay"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="35dp"
                    android:text="Details"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:text="Directions"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <TextView
        android:layout_width="355dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/upload_steps"
        android:elevation="10dp"
        android:padding="8dp"
        android:textColor="@color/ur_grey"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="46dp"
        android:clickable="true"
        android:focusable="true"/>





</LinearLayout>