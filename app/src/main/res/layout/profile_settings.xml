<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:layout_marginLeft="30dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:background="@drawable/clickable"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_bg"
            android:src="@drawable/pf_set_click"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="30sp"
            android:paddingTop="5sp"
            android:paddingRight="158dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="20.5sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="9sp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/clickable"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_bg"
            android:src="@drawable/profile_wallet"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="30sp"
            android:paddingTop="5sp"
            android:paddingRight="104dp"
            android:text="Billing Details"
            android:textColor="@color/black"
            android:textSize="20.5sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="9sp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/clickable"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_bg"
            android:src="@drawable/porfile_pf"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="30sp"
            android:paddingTop="5sp"
            android:paddingRight="49.5dp"
            android:text="User Management"
            android:textColor="@color/black"
            android:textSize="20.5sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="9sp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#bec0c2"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/clickable"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_bg"
            android:src="@drawable/profile_logout"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="30sp"
            android:paddingTop="5sp"
            android:text="Log out"
            android:textColor="@color/black"
            android:textSize="20.5sp"
            android:paddingRight="166dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="9sp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>


</LinearLayout>