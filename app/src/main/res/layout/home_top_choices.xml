<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:text="Top Recipes"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/top_recipe_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable"
            android:clickable="true"
            android:focusable="true">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/home_salta"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_salta" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="Salta by"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/home_salta_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="30dp"
                android:text="\@Ramzy"
                android:textColor="#4894AE"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_recipe_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable"
            android:clickable="true"
            android:focusable="true">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/home_meetloaf"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_meetloaf" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="13dp"
                android:text="Meatloaf by"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/home_meetloaf_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="35dp"
                android:text="\@Danial"
                android:textColor="#4894AE"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_recipe_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable"
            android:clickable="true"
            android:focusable="true">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/home_lasagna"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_lasagna" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="13dp"
                android:text="Lasagna by"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="RtlSymmetry" />

            <TextView
            android:id="@+id/home_lasagna_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="27dp"
            android:text="\@Shaima"
            android:textColor="#4894AE"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>